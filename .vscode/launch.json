  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "args": ["${workspaceRoot}/entrypoints/rest/index.ts"],
